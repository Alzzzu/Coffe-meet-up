<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.fragments.SelectFragment">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Что ищем?"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/russ"
        android:textSize="@dimen/_25ssp"/>

    <Button
        android:id="@+id/users_search"
        android:layout_width="@dimen/_140sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="активные точки"
        android:fontFamily="@font/russ3" />

    <Button
        android:id="@+id/coffee_shop_search"
        android:layout_width="@dimen/_145sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/title"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_gravity="center"
        android:text="свободные кофейни"
        android:fontFamily="@font/russ3" />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/free_coffeeshops"
        android:layout_below="@id/users_search"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_alignParentEnd="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/_145sdp"
        android:layout_height="@dimen/_180sdp"
        android:src="@drawable/active_points"
        android:layout_below="@id/users_search"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_alignParentStart="true"/>


</RelativeLayout>