<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parameters_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:background="@color/whipped_cream"
    tools:context=".activities.fragments.OptionsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Параметры поиска"
        android:gravity="center"
        android:textSize="@dimen/_30ssp"
        android:fontFamily="@font/russ"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/done"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/done"
        android:tint="@color/coffee"

        android:layout_gravity="right"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зачем хотите встретиться?"
        android:fontFamily="@font/russ3"
        android:textSize="@dimen/_15ssp"
        android:layout_marginLeft="@dimen/_5sdp"
        />

    <CheckBox
        android:id="@+id/meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Знакомства"
        android:fontFamily="@font/russ3"
        android:layout_marginLeft="@dimen/_5sdp"
        />

    <CheckBox
        android:id="@+id/coworking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Коворкинг"
        android:fontFamily="@font/russ3"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите желаемые признаки"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/russ3"

        android:layout_marginLeft="@dimen/_5sdp"

        />
    <CheckBox
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/male"
        android:fontFamily="@font/russ3"
        android:layout_marginLeft="@dimen/_5sdp"/>

    <CheckBox
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/female"
        android:fontFamily="@font/russ3"
        android:layout_marginLeft="@dimen/_5sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="возраст"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/russ3"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_marginLeft="@dimen/_5sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="от"
            android:fontFamily="@font/russ3"
            android:textSize="@dimen/_15ssp"
            android:layout_marginRight="@dimen/_5sdp" />
        <EditText
            android:id="@+id/min_age"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:textSize="@dimen/_15ssp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/background_text_user"
            android:layout_marginRight="@dimen/_5sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="до"
            android:fontFamily="@font/russ3"
            android:layout_marginRight="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp"/>
        <EditText
            android:id="@+id/max_age"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:textSize="@dimen/_15ssp"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/background_text_user"/>
    </LinearLayout>
</LinearLayout>